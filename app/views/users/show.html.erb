<div class='jumbotron'>
    <% if @user.photo.attached? %>
        <%= image_tag @user.photo %>
    <% end %>
    <div class="row">
        <div class="col-8">
            <div class="media-body ml-3">
                <h1><%= @user.name %></h1>
                <p><%= @user.email %></p>
            </div>
        </div>
    </div>
</div>