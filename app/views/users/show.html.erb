<div class="row show-top">
    <div class="col-4 mt-4">
        <div class="dashboard show-dash border-right">
            <%if @user.photo.attached? %>
                <%= image_tag current_user.photo.variant(resize:'300x300').processed, class:"photo-show" %>
            <% else %>
                <%= image_tag 'cat.jpg', class: "photo-show", alt: '元の画像' %>
            <% end %>
            <div class="lerned-history mt-2">
                <p class="learned-number-name"><%= @user.name %></p>
            </div>
            <hr class="line mt-4 mb-4">
            <div class="stats">
                <%= render 'shared/stats' %>
            </div>
            <%= render 'follow_form' if logged_in? %>
            <%= render 'edit_button' if current_user?(@user) %>
            <%= render 'admin_button' if current_user.admin? && admin_user?(@user) %>
        </div>
    </div>

    <div class="col-8 mt-4", style="padding-right: 0px">
        <p class="learned-number-title text-center">ACTIVITIES</p>
    </div>
</div>