<div class="container-fluid">
    <div class="row">
    <div class="col-md-10 offset-md-1">
        <p class="text-center mb-3 follow-title">USERS</p>
        <div class="row index">
            <% @users.each do |user| %>
                <div class="col-4 user-group mt-3 mb-3">
                    <div class="media mb-3">
                        <% if user.image? %>
                    <%= image_tag user.image.to_s, class:"photo" %>
                        <% else %>
                            <%= image_tag 'cat.jpg', class: "photo", alt: '元の画像' %>
                        <% end %>
                        <div class="media-body">
                            <%= link_to user.name, user, class: "follow-user", style: "text-decoration: none;" %>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>

        <div class="paginate text-center mb-3">
            <%= will_paginate %>
        </div>
    </div>
</div>