<div class="col-6 mx-auto">
    <%= form_with model: user, local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="form-group">
            <%= f.label :name, class: "form-text" %>
            <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
            <%= f.label :email, class: "form-text" %>
            <%= f.email_field :email, class: "form-control" %>
        </div>

        <div class="form-group">
            <%= f.label :password, class: "form-text" %>
            <%= f.password_field :password, class: "form-control" %>
        </div>

        <div class="form-group">
            <%= f.label :password_confirmation, class: "form-text" %>
            <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>

        <div class="form-group field mb-4">
            <%= f.label :photo,class: "form-text" %>
            <%= f.file_field :photo %>
        </div>

        <%= f.submit nil, class: 'btn btn-primary btn-block mb-4' %>
    <% end %>
</div>